<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/userBar"
        android:layout_width="407dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/status_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="139dp"
        android:layout_marginBottom="532dp"
        android:scaleX="2"
        android:scaleY="2"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/userNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:layout_marginBottom="448dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:text=""
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="282dp"
        android:layout_marginBottom="467dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:srcCompat="@drawable/mdi_pencil" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="295dp"
        android:fontFamily="@font/roboto"
        android:ems="10"
        android:textSize="20sp"
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/tvTenDN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="#d9d9d9"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="44dp"
        android:text="@string/LoginName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="254dp"
        android:textColor="#d9d9d9"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:text="@string/email" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="200dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:textSize="20sp"
        android:textColor="#d9d9d9"
        android:layout_marginBottom="156dp"
        android:text="TextView" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="102dp"
        android:ems="10"
        android:backgroundTint="@color/white"
        android:text=""
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/imagePen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="310dp"
        android:layout_marginBottom="310dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:srcCompat="@drawable/mdi_pencil" />

    <ImageView
        android:id="@+id/imagePen3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="310dp"
        android:layout_marginBottom="215dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:srcCompat="@drawable/mdi_pencil" />

    <ImageView
        android:id="@+id/imagePen4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="310dp"
        android:layout_marginBottom="118dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:srcCompat="@drawable/mdi_pencil" />

    <ImageButton
        android:id="@+id/backToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:scaleY="1.3"
        android:scaleX="1.3"
        android:background="@drawable/back" />
</RelativeLayout>